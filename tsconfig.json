{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node", // 변경: bundler에서 node로
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx", // 변경: preserve에서 react-jsx로
      "incremental": true,
      "baseUrl": "src",
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }